rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Messages collection
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
      
      // Allow sender to update/delete their own messages
      allow delete: if request.auth != null && request.auth.uid == resource.data.senderId;
      
      // Allow sender to update any field
      // Allow recipients to update ONLY readBy and deliveredTo fields for read receipts
      allow update: if request.auth != null && (
        // Sender can update anything
        request.auth.uid == resource.data.senderId ||
        // OR recipient can ONLY update readBy/deliveredTo (for read receipts)
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy', 'deliveredTo', 'deliveredAt', 'readAt']) &&
          (request.auth.uid in request.resource.data.readBy || request.auth.uid in request.resource.data.deliveredTo)
        )
      );
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
    }
    
    // PR0: Word validation cache - read only, Cloud Functions write
    match /wordValidationCache/{wordId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Word statistics - read only, Cloud Functions write
    match /wordStats/{wordId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // GPT validation cache - read only, Cloud Functions write
    match /gptValidations/{wordId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Translation cache - read by authenticated users
    match /translationCache/{cacheId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Rate limits - Cloud Functions only
    match /rateLimits/{limitId} {
      allow read, write: if false; // Only Cloud Functions
    }
  }
}

